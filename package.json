{
  "name": "intelligent-automation",
  "version": "1.0.0",
  "description": "Intelligent_Automation framework with self-healing test capabilities",
  "main": "index.js",
  "scripts": {
    "test": "npx cucumber-js",
    "test:html": "npx cucumber-js --format html:reports/cucumber-report.html",
    "test:json": "npx cucumber-js --format json:reports/cucumber-report.json",
    "test:parallel": "npx cucumber-js --parallel 2",
    "test:api": "npx cucumber-js --tags @api",
    "test:db": "npx cucumber-js --tags @db",
    "install:browsers": "npx playwright install",
    "install:deps": "npx playwright install-deps",
    "setup": "npm install && npm run install:browsers && npm run install:deps",
    "setup:db": "node features/support/db/createTestDb.js",
    "setup:reporting": "node features/support/reporting/setup-reporting.js",
    "test:integration": "npx cucumber-js --tags \"@api or @db\"",
    "report:generate": "node features/support/reporting/generateReport.js",
    "report:dashboard": "node features/support/reporting/generateDashboard.js",
    "report:email": "node features/support/reporting/sendEmailReport.js",
    "report:pdf": "node features/support/reporting/generatePdfReport.js",
    "test:full": "npm test && npm run report:generate",
    "rally:generate": "node features/support/rally/rally-cli.js generate-tests",
    "rally:list": "node features/support/rally/rally-cli.js list-stories",
    "rally:fetch": "node features/support/rally/rally-cli.js fetch-story",
    "test:rally": "npm run rally:generate && npx cucumber-js features/rally-stories",
    "jira:generate": "node features/support/jira/jira-cli.js generate-tests",
    "jira:list": "node features/support/jira/jira-cli.js list-stories",
    "jira:fetch": "node features/support/jira/jira-cli.js fetch-story",
    "jira:create-defect": "node features/support/jira/jira-cli.js create-defect",
    "test:jira": "npm run jira:generate && npx cucumber-js features/jira-stories"
  },
  "keywords": [
    "playwright",
    "bdd",
    "cucumber",
    "automation",
    "testing",
    "zero-code"
  ],
  "author": "GitHub Copilot",
  "license": "MIT",
  "devDependencies": {
  "dependencies": {
    "fs-extra": "^11.2.0",
    "dotenv": "^16.4.5",
    "axios": "^1.6.7",
    "ajv": "^8.12.0",
    "mysql2": "^3.9.2",
    "pg": "^8.11.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "mssql": "^10.0.2",
    "lodash": "^4.17.21",
    "nodemailer": "^6.9.12",
    "chart.js": "^4.4.2",
    "chartjs-node-canvas": "^4.1.6",
    "dayjs": "^1.11.10",
    "handlebars": "^4.7.8",
    "html-pdf-node": "^1.0.8",
    "form-data": "^4.0.0"
    "chart.js": "^4.4.2",
    "chartjs-node-canvas": "^4.1.6",
    "dayjs": "^1.11.10",
    "handlebars": "^4.7.8",
    "html-pdf-node": "^1.0.8"
  }
}
